{
  "name": "loan-management-system",
  "version": "1.0.0",
  "description": "Desktop application for WMF Corp credit line management",
  "main": "./dist-electron/main.js",
  "private": true,
  "author": "WMF Corp",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx vite preview",
    "electron:build": "npm run build && npx electron-builder --win portable --x64 --config.electronVersion=28.1.0",
    "clean": "rimraf dist dist-electron release out",
    "forge:start": "electron-forge start",
    "forge:package": "npm run build && electron-forge package",
    "forge:make": "npm run build && electron-forge make",
    "forge:build": "npm run build && npm run forge:compile && npm run forge:make",
    "forge:compile": "npx tsc electron/main.ts electron/preload.ts --outDir dist-electron --module commonjs --target es2019 --esModuleInterop --skipLibCheck",
    "check:types": "tsc --noEmit",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "body-parser": "^2.2.0",
    "clsx": "^2.1.0",
    "csv-parse": "^5.5.3",
    "date-fns": "^3.0.6",
    "docusign-esign": "^8.4.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "lucide-react": "^0.303.0",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-router-dom": "^6.21.1",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.0",
    "@electron-forge/maker-squirrel": "^7.10.0",
    "@electron-forge/maker-zip": "^7.10.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/nodemailer": "^7.0.2",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "28.1.0",
    "electron-builder": "24.9.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fs-extra": "^11.3.2",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.20",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.wmfcorp.loanmanagement",
    "productName": "Loan Management System",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "npmRebuild": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
